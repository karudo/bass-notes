{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": false,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "types": [
      "react",
      "react-dom",
      "jest"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
